<div class="container">
<div class="main">
<div class="panel panel-default">
 <div class="panel-body"><center><h4><i class= "fa fa-handshake" ></i>&nbsp;All Requests</h4> </center>
<table class="table table-hover">
    
<th>Requested by</th>
<th>Category</th>
<th>Title</th>
<th>Description</th>
<th>City</th>
<th>Price</th>
<th></th>


<% @requests.take(12).each do |request| %>


<% if request.completed? %>


<tr>



<td><strike><%= image_tag request.user.image %>&nbsp;<%= request.user.name %></strike></td>
<td><b><strike><%= request.category.try(:name)%><strike></b></td>

<stike><td><p><strike><%= request.body %></stike></p></td>
<td><strike><%= request.city.try(:name) %></strike></td>
<td><strike><font color="#3A74DA"><b>Ksh  <%= number_with_delimiter(request.budget, :delimiter => ',') %> </b></font></strike></td>
<strike><td><%= link_to "View Request" , request_path(request), class: "btn btn-md btn-success" %></td></strike>



</p>
</tr>


<% else %>

<tr>



<td><%= image_tag request.user.image %>&nbsp;<%= request.user.name %></td>
<td><b><%= request.category.try(:name)%></b></td>

<td><p><%= request.body %></p></td>
<td><%= request.city.try(:name) %></td>
<td><font color="#3A74DA"><b>Ksh  <%= number_with_delimiter(request.budget, :delimiter => ',') %> </b></font></td>
<td><%= link_to "View Request" , request_path(request), class: "btn btn-md btn-primary" %></td></td>


</tr>


<% end %>
<% end %>

</table>


</table>
<p align="right">
<%= link_to "View all Requests >", requests_index_path , class: "btn btn-link" %>
</p>
</div>
</div>


