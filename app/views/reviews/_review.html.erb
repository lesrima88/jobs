<center>
<div class="row">
  <div class="col-md-12 ">

   <div class="panel panel-default">
    <div class="panel-body">
  
<H3>Customer Reviews</H3>
<% if review.user.provider=='facebook' %>
<p><%= image_tag review.user.image, class: "img-circular small" %></p>

<p>By <%= link_to(review.user.name, review.user) %> on<%= review.created_at.strftime(" %b %d, %Y") %></p>
<div class="review-rating" data-score="<%= review.rating %>"></div>

<% else %>

<p><%= image_tag review.user.avatar, class: "img-circular small" %></p>

<p>By <%= link_to(review.user.first_name, review.user) %> on<%= review.created_at.strftime(" %b %d, %Y") %></p>
<div class="review-rating" data-score="<%= review.rating %>"></div>

<% end %>


<p><%= review.comment %></p>






<% if user_signed_in? %>

<% if @job.user_id == current_user.id %>

<% else %>

<%= link_to "Edit", edit_job_review_path(review.job, review) %>
<%= link_to "Delete", job_review_path(review.job, review),method: :delete, data: { confirm: "Are you sure you want to permanently delete your review?"} %>


<% end %>

<% end %>

</div>
</div>
</center>