<div class="row">
  <div class="col-md-4 col-md-offset-4">

  

      

<div class="panel panel-default">
 <div class="panel-heading panel-heading-custom"><center><h3>Sign Up</h3></center></div>

<div class="panel-body">


  

    <%= f.input :email, required: true, autofocus: true , class: 'form-control'%>




  
      <%= f.input :username, required: true, autofocus: true,  class: 'form-control' %>
      <%= f.input :first_name, required: true, autofocus: true,  class: 'form-control' %>

    
      <%= f.input :last_name, required: true, autofocus: true,  class: 'form-control' %>
  
 
 <div class ="form-group">
  
   <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
   </div>
    
     <div class ="form-group">
    
    <%= f.input :password_confirmation, required: true %>
    </div>
    
 
    <center><%= f.submit "Create My Account", class: "btn btn-primary"%></center>
    <br>
      <center><p>Or</p></center>
      <br>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<p class="message" style="margin-bottom:-15px;"><a> <%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <center><%= link_to "Sign up with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) , class: "btn btn-primary" %><br /></center>
    <br>
  <% end -%>
</a></p>
<% end %>
<% end -%>
    

  <% end %>

</form>
