

<br /><br />
<div class="row">
  <div class="col-md-12">
    <div class="login-page">
      <div class="form" style="padding-top:5px;">

<div class="special login-form">
        <h2 style="margin-bottom:15px;">Log in</h2>
        <%= stylesheet_link_tag "signup" %>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field-wrap">
    <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
    </div>

    <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
    <p class="message" style="margin-top:0px; float:middle;"><%= link_to "Forgot your password?", new_password_path(resource_name) %></p><br />
    <% if devise_mapping.rememberable? -%>
    <div class="message" style="margin-top:0px; text-align:left;">
     <div style="width:20px; display:inline-block;"><%= f.check_box :remember_me %></div>Remember me

  </div>
  <% end -%>

  <div class="actions" style="margin-top:10px;">
    <%= f.button :submit, "Log in", class: "btn button btn-success" %>

  </div>
  <p class="message" style="margin-bottom:-15px;"><a> <%= render "devise/shared/links" %></a></p>
<% end %>


