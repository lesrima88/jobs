
<div class=" container">
<br /><br />
<div class="row">
  <div class="col-md-12">
    <div class="login-page">
      <div class="form" style="padding-top:5px;">

      
<center>
<div class="special login-form">
        <h2 style="margin-bottom:15px;">Log in</h2>
        <%= stylesheet_link_tag "signup" %>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <p class="message" style="margin-bottom:-15px;"><a> <%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
</a></p>
<% end %>
<% end -%>
</div>
</center>

