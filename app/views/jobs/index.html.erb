<div class="indexcontent">

<div class="browse">
<h3>Browse A Service In Your Area</h3>

<%= form_tag search_jobs_path, method: :get do |f| %>

<%= select_tag(:category ,options_for_select(Category.all.map{ |c| [c.name, c.id]}),:prompt=>"Select A Service",class: "indexdropdown" )%>

<%= select_tag(:city, options_for_select(City.all.map{ |c|[c.name, c.id]}), :prompt=>"Select Your City") %>


<%= submit_tag 'Search', class: "btn-custom" %>
<% end %>
</div>


<h3>Recent Services:</h3>





 
<% @jobs.take(06).each do |job| %>



<%= link_to job.company, job_path(job) %>


<%= image_tag (job.job_img.url :job_index) %>

<%= job.city.try(:name) %></div>


</div>

<% end %>