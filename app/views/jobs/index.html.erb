<h3>Find A Service In Your Area</h3>

<%= form_tag search_jobs_path, method: :get do |f| %>

<%= select_tag :category ,options_for_select(Category.all.map{ |c| [c.name, c.id]}) %>
<%= select_tag :city ,options_for_select(City.all.map{ |c| [c.name, c.id]}) %>


<%= submit_tag 'Search' %>
<% end %>


<h3>Recent Services:</h3>
<% @jobs.each do |job| %>
<h3><%= link_to job.company, job_path(job) %></h3>






<% end %>


