<h4> Latest Services </h4>

<div class="ui four column grid">
<% @jobs.take(12).each do |job| %>


	<div class="four wide column">
<% if job.image.present? %>
<%= image_tag job.image.url , class: "ui centered small image"  %>
<% else %>

<%= image_tag "missing.jpg", class: "ui centered small image" %>
<% end %>




  <div class="content">
      <a class="header"><%= job.title %></a>
      <div class="description">
        <%= job.description %>
</div>
      </div>
    
  </div>


    <% end %>
    </div>
 