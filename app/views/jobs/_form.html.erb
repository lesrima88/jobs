    <%= simple_form_for(@job, html: {multipart: true}) do |f| %>
	<%= f.select :category_id,Category.all.map { |f| [f.name, f.id] } %>
	<%=f.collection_select  :city_id, City.all, :id ,:name,:prompt=> "Choose Your City" %>
	
	
	<%= f.input :company,label: "Your Company Name" %>
	<%= f.input :description,label: "Tell Us About Your Service" %>
	<%= f.input :url, label: "Phone Number:" %>
	 <div class="field">
    
	<br>
	<%= f.file_field :job_img %>
	<%= f.button :submit %>

<% end %>
