<div class="sidenav">

<div><h4> Categories </h4></div>

<% Category.all.each do |category| %>
              
<%= link_to category.name, categories_show_path(category: category.name) %>
      
            <% end %>
   
       </div>

<div class= "container">
<div class= "main">
<div class="panel panel-primary">
 

<div class="panel-body"><center><h4><i class= "fa fa-wrench" ></i>&nbsp;All Services</h4> </center></div>
  <div class="panel-body">
  
  



<div id="gallery">

  <% @jobs.each do |job| %>
    <div class="col-md-3">
                <% if job.image.present? %>
             <%= link_to (image_tag job.image_url), job_path(job), :class=> "thumbnail" %>
  
      <% else %>
            
           
           <%= link_to (image_tag "missing.jpg"), job_path(job), :class=> "thumbnail" %>

           <% end %>
        


            <div class="caption">
        </b>
             <h4><%= link_to job.title, job_path(job) %></h4>

             <p><%= job.category.try(:name)%></p>

              <p><%= job.city.try(:name) %><br></p>




          
               
              <p><div class="average-review-rating" data-score=<%= job.average_review %>></div> <p>   
              <span class="number-of-reviews">Based on <%= job.reviews.count %>  reviews</span>         
          
      
        </div>


     
      </div>
   <% end %>
   <p align="right"><%= link_to 'Back' , root_path %></p>



</div>


   <script>
  $('.average-review-rating').raty({
    readOnly: true,
    path: '/assets/',
    score: function() {
      return $(this).attr('data-score')
    }
  });
</script>