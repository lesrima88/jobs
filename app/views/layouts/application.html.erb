<!DOCTYPE html>
<html>
<head>
  <title>Kazii</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



 <nav class="navbar navbar-default">


 <div class="container">
       <div class="navbar-header">
     <%= link_to "Kazii.io", root_path, class: "navbar-brand" %>

     

</div>

<ul class="nav navbar-nav navbar-left">

<% if user_signed_in? %>
<li><%= link_to "Welcome #{current_user.first_name}" %> </li>

</ul>
<ul class="nav navbar-nav navbar-right">

<li><%= link_to "List Your Service", new_job_path %></li>
  <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Account
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><%= link_to "View Profile", current_user %></li>
          <li><%= link_to "Account Settings", current_user %></li>
          <li><%= link_to "Edit Profile" , current_user %></li>
          </ul>
       
      </li>


<li><%= link_to "Sign out", destroy_user_session_path,method: :delete %><span class="glyphicon glyphicon-log-in"></span></li>







<% else %>



<li><%= link_to "List Your Service", new_user_session_path %></li>

<ul class="nav navbar-nav navbar-right">


<li><%= link_to "Sign in", user_session_path %></li>
</ul>

<% end %>





</div>

</nav>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
