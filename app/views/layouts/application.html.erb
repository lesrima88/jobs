
<!DOCTYPE html>
<html>
<head>
   
  <title>Kazii</title>
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track':  'reload' %>
  
  <%= csrf_meta_tags %>
</head>
<body>



 <nav class="navbar navbar-default navbar-fixed-top">
 <div class="container">
  <div class="navbar-header">
    <%= link_to " Kazii.io" , root_path , class: "navbar-brand" %>  
     

   </div>





<ul class="nav navbar-nav navbar-left">
<% if user_signed_in? %>
  <li><%= link_to "Welcome #{current_user.first_name}" %> </li>
    <li class="round-image-50"><%= image_tag(current_user.avatar.url(:thumb)) %></li>
</ul>

  <ul class="nav navbar-nav navbar-right">
    <li><%= link_to "List Your Service", new_job_path %></li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Account
        <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "View Profile", current_user %></li>
            <li><%= link_to "Account Settings", edit_user_registration_path(@user)%></li>
            <li><%= link_to "Favorites" ,  users_favorite_path(@user) %></li>
        </li>
      <li><%= link_to "Log out", destroy_user_session_path,method: :delete %></li>
   </ul>


  <% else %>
 
   
   <ul class="nav navbar-nav navbar-right">
    <li><%= link_to "Log in", user_session_path %></li>
    <li><%= link_to "List Your Service", new_user_session_path %></li>
   
  </li>
  </ul>



<% end %>




   
  
  

</div>
</nav>











</div>

</nav>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>


